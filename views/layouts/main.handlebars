<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Tech Blog</title>

    <!-- CSS -->
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/style.css">

    <!-- Bootstrap style -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.4.0/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body class="cover-background item">
    <header>
        <div class="header">
            <div class="title">
                <h1>The Tech Blog</h1>
            </div>
            <div class="navbar col-md-2 col-lg-6 input-group justify-content-center">
                <!-- Home Button (visible to all) -->
                <a href="/">
                    <button class="btn btn-outline-primary rounded-pill px-3" type="button">Home</button>
                </a>

                <!-- Dashboard Button (visible to all, redirects based on login status) -->
                <button class="btn btn-outline-primary rounded-pill px-3" id="dashboardButton" type="button">Dashboard</button>

                {{#unless logged_in}}
                    <!-- Login and Sign Up Buttons (visible only when not logged in) -->
                    <a href="/login">
                        <button class="btn btn-outline-primary rounded-pill px-3" type="button">Login</button>
                    </a>
                    <a href="/signUp">
                        <button class="btn btn-outline-primary rounded-pill px-3" type="button">Sign Up</button>
                    </a>
                {{/unless}}

                {{#if logged_in}}
                    <!-- "+" Button for Blog Creation (visible only when logged in) -->
                    <a href="/create-blog">
                        <button class="btn btn-outline-success rounded-pill px-3" type="button">+</button>
                    </a>

                    <!-- Logout Button (visible only when logged in) -->
                    <button class="btn btn-outline-danger rounded-pill px-3" id="logout" type="button">Log Out</button>
                {{/if}}
            </div>
        </div>
    </header>

    {{{body}}}

    <!-- Script for Dashboard Button Behavior -->
    <script>
        const isLoggedIn = {{#if logged_in}}true{{else}}false{{/if}};
        document.getElementById('dashboardButton').addEventListener('click', function() {
            window.location.href = isLoggedIn ? '/dashboard' : '/login';
        });
    </script>

    <!-- Render script for logged in users only -->
    {{#if logged_in}}
    <script src="/js/logout.js"></script>
    {{/if}}

    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

