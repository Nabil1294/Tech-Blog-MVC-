<div class="col-md-12">
    <h2 class="mt-3 text-center">Sign Up</h2>
    <h5 class="text-center">
        Do you already have an account?<br>
        Go ahead and <a href="/login">Log In</a>
    </h5>
    <div class="item container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <form class="signup-form" action="/api/users" method="post">
                    <div class="form-group">
                        <label for="username-signup">Username</label>
                        <input type="text" class="form-control text-left" id="username-signup" name="user_name" required>
                    </div>
                    <div class="form-group mt-2">
                        <label for="password-signup">Password</label>
                        <input type="password" class="form-control text-left" id="password-signup" name="password" required>
                    </div>
                    <div id="signup-error-message" class="alert alert-danger" style="display: none;"></div>
                    <button type="submit" class="mt-5 btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="./js/signUp.js"></script>

